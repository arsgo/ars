{
    "status": "run",
    "rpc-pool": {
        "min": 1,
        "max": 2
    },
    "jobs": [
        {
            "name": "auto_call_rpc",
            "trigger": "0/10 * * * * ?",
            "script": "./scripts/rpc.lua",
            "enable": false
        }
    ],
    "tasks": [
        {
            "name": "mq_consumer",
            "type": "mq",
            "method": "consume",
            "script": "./scripts/mq_consumer.lua",
            "params": "mq=stomp&queue=delivery",
            "min": 1,
            "max": 2
        },
        {
            "name": "auto_send_message",
            "type": "job",
            "method": "consume",
            "script": "./scripts/mq_send.lua",
            "params": "mq=stomp&queue=delivery",
            "min": 1,
            "max": 2
        }
    ],
    "server": {
        "type": "http",
        "address": "1016",
        "routes": [
            {
                "path": "/system/md5",
                "method": "get",
                "script": "./scripts/md5.lua",
                "min": 1,
                "max": 2
            },
            {
                "path": "/system/rpc",
                "method": "get",
                "script": "./scripts/rpc.lua",
                "min": 1,
                "max": 2
            },
            {
                "path": "/system/query",
                "method": "get",
                "script": "./scripts/query.lua",
                "params": "id=1",
                "min": 1,
                "max": 2
            },
            {
                "path": "/system/mq",
                "method": "get",
                "script": "./scripts/mq_send.lua",
                "params": "mq=stomp&queue=delivery",
                "min": 1,
                "max": 2
            }
        ]
    }
}
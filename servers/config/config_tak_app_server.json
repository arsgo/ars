{
    "status": "run",
    "jobs": [
        "auto_build_bill"
    ],
    "rpc-pool": {
        "min": 2,
        "max": 2
    },
    "server": {
        "type": "http",
        "address": "1016",
        "routes": [
            {
                "path": "/system/md5",
                "method": "get",
                "script": "./scripts/md5.lua"
            },
            {
                "path": "/system/rpc",
                "method": "get",
                "script": "./scripts/rpc.lua"
            },
            {
                "path": "/system/query",
                "method": "get",
                "script": "./scripts/query.lua",
                "params": "id=1"
            }
        ]
    },
    "tasks": [
        {
            "trigger": "0/10 * * * * ?",
            "script": "./scripts/save_logger.lua"
        }
    ]
}